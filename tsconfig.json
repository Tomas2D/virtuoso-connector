{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2019",
    "module": "commonjs",
    "lib": [
      "es2019"
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "lib",
    "sourceRoot": "src",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": false,
    "typeRoots": ["./@types", "./node_modules/@types"],
    "allowJs": false
  },
  "include": ["src", "test", "@types"]
}
